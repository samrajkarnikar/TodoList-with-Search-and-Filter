@model TodoList.Models.Todo

<div class="container mt-4">
    <h3 class="text-center">Delete Todo</h3>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.id)

        <div class="alert alert-warning">
            <h4 class="alert-heading">Are you sure you want to delete this item?</h4>
            <p><strong>Title:</strong> @Model.title</p>
            <p><strong>Status ID:</strong> @Model.status_id</p>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </form>
</div>
